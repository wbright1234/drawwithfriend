extends ../layout/base
block content
	section.content-header
		h1
			| Edit Admin Password
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Admin
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus

			.box-body
				form(role='form',method='post' action='/login/editpassword')
					.row
						.col-xs-6
							.box-body
								- if (messages.msg_error)
									.alert.alert-danger.alert-dismissable
										button.close(type='button', data-dismiss='alert', aria-hidden='true')
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert!
										| !{messages.msg_error}
								- if (messages.msg_info)
									.alert.alert-success.alert-dismissable
										button.close(type='button', data-dismiss='alert', aria-hidden='true')
											| ×
										h4
											i.icon.fa.fa-ban
											| Success!
										| !{messages.msg_info}
								.form-group
									label
										| Email
									input(type='text',name='email',placeholder='Enter Email').form-control
								.form-group
									label
										| Password
									input(type='password',name='password',placeholder='Enter Password').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil
									|  Update
