extends ../layout/base
block content
	section.content-header
		h1
			| Edit Subject
			small menu for editing subject data
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Subject
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus

			.box-body
				form(role='form',method='post' action='/subject/edit/#{(id==undefined) ? data.id : id}')
					.row

						.col-xs-6
							.box-body
								- if (messages.msg_error)
									.alert.alert-danger.alert-dismissable
										button.close(type='button', data-dismiss='alert', aria-hidden='true')
											| ×
										h4
											i.icon.fa.fa-ban
											| Alert!
										| !{messages.msg_error}
								- if (messages.msg_info)
									.alert.alert-success.alert-dismissable
										button.close(type='button', data-dismiss='alert', aria-hidden='true')
											| ×
										h4
											i.icon.fa.fa-ban
											| Success!
										| !{messages.msg_info}
								.form-group
									label
										| Title
									input(type='text',value="#{ (subjectname == undefined) ? data.title : subjectname }",name='subjectname',placeholder='Enter Title').form-control
								.form-group
									label
										| Search Url
									input(type='text',value="#{ (searchurl == undefined) ? data.searchurl : searchurl }",name='searchurl',placeholder='Enter Search Url').form-control
							.box-footer
								input(type="hidden",name="_method", value="PUT")
								button(type='submit').btn.btn-primary
									i.fa.fa-pencil
									|  Edit
								a(href='/subject').btn.btn-primary.pull-right
									| Back
